<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:startColor="#F80000"
        android:endColor="#EE2B2B"
        android:angle="45"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Optional padding -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>
