<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base theme -->
    <style name="Theme.SudokuWizard" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/wizard_purple</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/wizard_blue</item>
        <item name="colorSecondaryVariant">@color/light_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/bg_dark</item>
        <item name="android:navigationBarColor">@color/bg_darker</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Splash Theme -->
    <style name="SplashTheme" parent="Theme.SudokuWizard">
        <item name="android:windowBackground">@drawable/bg_wizard_stars</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Text Styles -->
    <style name="TitleText">
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:shadowColor">@color/wizard_purple</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">8</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ButtonText">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CellText">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CellTextGiven">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cell_given</item>
    </style>

    <style name="CellTextHint">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cell_hint</item>
    </style>

    <!-- Button Styles -->
    <style name="MagicButton" parent="Widget.Material3.Button">
        <item name="android:minHeight">@dimen/button_height_large</item>
        <item name="android:background">@drawable/btn_magic_gradient</item>
        <item name="android:paddingStart">@dimen/spacing_large</item>
        <item name="android:paddingEnd">@dimen/spacing_large</item>
        <item name="android:textAppearance">@style/ButtonText</item>
    </style>

    <style name="RoundIconButton">
        <item name="android:minWidth">@dimen/button_height_normal</item>
        <item name="android:minHeight">@dimen/button_height_normal</item>
        <item name="android:background">@drawable/btn_round_icon</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Card Styles -->
    <style name="MagicCard">
        <item name="cardCornerRadius">@dimen/corner_radius_medium</item>
        <item name="cardElevation">@dimen/elevation_medium</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <!-- EditText Styles -->
    <style name="SudokuCell">
        <item name="android:minWidth">@dimen/cell_size_large</item>
        <item name="android:minHeight">@dimen/cell_size_large</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textColorHint">@color/text_muted</item>
    </style>
</resources>