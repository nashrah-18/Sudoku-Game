<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/purplewallpaper1"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_round_icon"
            android:src="@drawable/ic_back"
            app:tint="#FFFFFF"
            android:contentDescription="Back"
            android:layout_marginEnd="16dp"
            android:padding="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ§™â€â™‚ï¸ Magic Solver"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFEB3B"
            android:gravity="center" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/wizardhat"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- Instruction -->
    <TextView
        android:id="@+id/hintText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your Sudoku puzzle and let the magic happen!"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:padding="12dp"
        android:background="@drawable/bg_hint_box"
        android:layout_marginBottom="16dp" />

    <!-- Sudoku Grid Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:padding="4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:contentDescription="Sudoku grid input area">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TableLayout
                    android:id="@+id/sudokuTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="*"
                    android:stretchColumns="*"
                    android:background="@drawable/bg_grid_solver"
                    android:padding="1dp" />

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <!-- Solve Button Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSolve"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btn_gradient_reset"
                android:padding="16dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/magicwand"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ¨ Solve"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Clear Button Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardClear"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btn_gradient_check"
                android:padding="16dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/broom"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§¼ Clear"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Features Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="1"
        android:layout_marginTop="24dp"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="âœ… Smart Validation"
            android:textSize="12sp"
            android:textColor="#90EE90"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="âš¡ Fast Solving"
            android:textSize="12sp"
            android:textColor="#87CEEB"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="ðŸŽ¯ Step-by-step"
            android:textSize="12sp"
            android:textColor="#FFB6C1"
            android:gravity="center" />

    </GridLayout>

</LinearLayout>
